<%= ERB.new(File.read(File.expand_path("_header.erb",File.dirname(__FILE__)))).result(binding) %>
<%
  def always_array(var)
    scope.function_always_array(var)
  end

  conditions = always_array(rewrite_cond)
  rules      = always_array(rewrite_rule)
%>
<% if _header -%>
  RewriteEngine On
<% end -%>
<% conditions.each do |condition| -%>
  RewriteCond <%= condition %>
<% end -%>
<% rules.each do |rule| -%>
  RewriteRule <%= rule %>
<% end -%>

