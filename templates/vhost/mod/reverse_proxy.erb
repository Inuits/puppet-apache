### reverse proxy definition goes here ###

ProxyRequests Off

<Proxy <%= proxy_url %>>
  Order <%= allow_order %>
<% if allow_from != '' -%>
  Allow from <%= allow_from %>
<% end -%>
<% if deny_from != '' -%>
  Deny from <%= deny_from %>
<% end -%>
</Proxy>

<%
    if proxypass.is_a?(Array)
      proxypass.each do |pass| -%>
ProxyPass <%= pass %>
<%
      end
    elsif proxypass.is_a?(Hash)
      proxypass.each do |location,target| -%>
ProxyPass <%= location %> <%= target %>
<%
      end
    elsif proxypass.is_a?(String) -%>
ProxyPass <%= proxypass %>
<%
    end
-%>
