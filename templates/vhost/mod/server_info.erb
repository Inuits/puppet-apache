<%= ERB.new(File.read(File.expand_path("_header.erb",File.dirname(file)))).result(binding) -%>
<%
  def empty?(value)
    value == '' or value == :undef
    end
-%>
<% if @comment and ! @comment.empty? -%>
  # <%= @comment.gsub(/\n/, "\n  # ") %>
<% end -%>

  <Location <%= location%>>
    SetHandler server-info
    Order <%= allow_order %>
<%  if ! empty?(allow_from) -%>
    Allow from <%= allow_from %>
<%  end -%>
<%  if ! empty?(deny_from) -%>
    Deny from <%= deny_from %>
<%  end -%>
  </Location>

